<h1 class="text-4xl font-bold">
  <%= @book.title %>
</h1>

<div class="mt-4">
  <% @articles.each do |article| %>
    <% next if article.system %>
    <%= link_to article.title, article_path(article, article.title_slug), class: "text-blue-500 hover:text-blue-600" %>
    <br>
  <% end %>
</div>

<div class="my-4">
  <%= link_to "New article", new_book_article_path(@book) %>
</div>

<div>
  <%= link_to "Manage articles", book_manage_articles_path(@book, title: @book.title) %>
</div>
