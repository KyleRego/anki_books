<h1 class="text-4xl font-bold mb-4">
  <%= @book.title %>
</h1>

<div class="mt-4">
  <% @articles.each do |article| %>
    <% next if article.system %>
    <%= link_to article.title, article_path_or_root_path_if_system(article), class: "text-blue-500 hover:text-blue-600" %>
    <br>
  <% end %>
</div>

<div class="my-4">
  <%= link_to "New article", new_book_article_path(@book) %>
</div>
