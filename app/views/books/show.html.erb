<% content_for :page_specific_links do %>
  <%= link_to @book.title, book_articles_path(@book), class: "font-semibold mr-4" %>
<% end %>

<% @book.articles.each do |article| %>
  <% @article = article %>
  <% @basic_notes = article.basic_notes %>
  <div class="border-black border-b" data-controller="second-nav-top">

    <% if logged_in? %>
      <div class="sticky z-50 bg-white flex-row justify-end" data-second-nav-top-target="nav">
        <%= link_to(@article.title, article_path(@article)) %>
      </div>
    <% end %>

    <%= render partial: "articles/content" %>
  </div>
<% end %>
