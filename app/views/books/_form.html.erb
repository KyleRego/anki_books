<%= form_with(model: @book, url:, id: "book-form") do |form| %>
  <div class="mt-2">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="mt-2">
    <div class="form-check">
      <%= form.check_box :allow_anonymous, { class: "form-check-input" } %>
      <%= form.label :allow_anonymous, class: "form-check-label" %>
    </div>
  </div>
<% end %>
