<% content_for :page_specific_links do %>
  <%= link_to @book.title, book_articles_path(@book), class: "font-semibold mr-4" %>
<% end %>

<h2>Manage book: <%= @book.title %></h2>

<div class="mt-4 pb-4 border-b-2">
  <%= link_to "Edit book", edit_book_path(@book), class: "action-link" %>
</div>

<% if @articles.count > 1 %>
<div class="mt-4 pb-8 border-b-2">
  <%# TODO: Why is this id needed %>
  <h3 id="<%= "book-#{@book.id}" %>" class="mb-4">
    Reorder articles:
  </h3>

  <div class="p-4 lg:max-w-4xl border-2 shadow-lg">
    <% @articles.each do |article| %>
      <div class="reorderable-unit">
        <div data-controller="reorder-articles--article-draggable">
          <div data-reorder-articles--article-draggable-target="article" draggable=true id="<%= article.id %>" class="cursor-pointer">
            <%= article.title %>
          </div>
        </div>
        <div data-controller="reorder-articles--article-dropzone">
          <div data-reorder-articles--article-dropzone-target="dropzone" class="py-2"></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<% end %>

<% if @user_other_books.any? && @articles.any? %>
<div class="mt-4 pb-4 border-b-2">
  <h3 class="mb-4">Transfer articles to a different book:</h3>
  <%= form_with(model: @book, url: book_transfer_articles_path(@book)) do |form| %>
    <% @articles.each do |article| %>
      <div class="mb-4">
        <%= label_tag(article.id) do %>
          <%= check_box_tag("article_ids[]", article.id, nil, id: article.id) %>
          <span><%= article.title %></span>
        <% end %>
      </div>
    <% end %>
    <div>
      <%= select_tag("target_book_id",
                      options_from_collection_for_select(@user_other_books, :id, :title),
                      prompt: "Select a book",
                      title: "Select a book to move articles to") %>
    </div>
    <%= form.submit "Move articles to selected book", class: "action-link mt-4" %>
  <% end %>
</div>
<% end %>

<div class="mt-4 pb-8 border-b-2">
  <h3 class="mb-4">
    Domains:
  </h3>

  <div class="p-4 lg:max-w-4xl border-2 shadow-lg">
    <%= form_with(model: @book, url: change_book_domains_path(@book)) do |form| %>
    <% domains_options = @user_domains.map { |d| { id: d.id, title: d.title, selected: @book_current_domains.include?(d) } } %>
      <% domains_options.each do |domain_option| %>
        <div class="mb-2">
          <%= label_tag(domain_option[:title]) do %>
            <%= check_box_tag("domains_ids[]", domain_option[:id], domain_option[:selected], id: domain_option[:id]) %>
            <span><%= domain_option[:title] %></span>
          <% end %>
        </div>
      <% end %>
      <%= form.submit "Update Domains", class: "action-link" %>
    <% end %>
  </div>
</div>

<div class="mt-4 pb-8 border-b-2">
  <h3 class="mb-4">
    Concepts:
  </h3>

  <div class="p-4 lg:max-w-4xl border-2 shadow-lg">
    <%= form_with(model: @book, url: change_book_concepts_path(@book)) do |form| %>
    <% concepts_options = @user_concepts.map { |c| { id: c.id, name: c.name, selected: @book_current_concepts.include?(c) } } %>
      <% concepts_options.each do |concept_option| %>
        <div class="mb-2">
          <%= label_tag(concept_option[:name]) do %>
            <%= check_box_tag("concepts_ids[]", concept_option[:id], concept_option[:selected], id: concept_option[:id]) %>
            <span><%= concept_option[:name] %></span>
          <% end %>
        </div>
      <% end %>
      <%= form.submit "Update Concepts", class: "action-link" %>
    <% end %>
  </div>
</div>
