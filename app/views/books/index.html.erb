<h1>Books</h1>

<div class="my-2">
  <%= link_to "New book", new_book_path, class: "action" %>
</div>

<div class="pb-4 border-black-b">
  <h3 class="mb-2">Tree</h2>
  <% @root_books.each do |book| %>
    <% @book_node = book %>
    <% @tree_depth = 0 %>
    <%= render "book_link_tree_node" %>
  <% end %>
</div>

<div class="mt-4">
  <h3 class="mb-2">All</h2>

  <% @books.each do |book| %>
    <div><%= link_to book.title, book_articles_path(book) %></div>
  <% end %>
</div>
