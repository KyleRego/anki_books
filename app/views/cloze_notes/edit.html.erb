<%= turbo_frame_tag @cloze_note.turbo_dom_id do %>

  <div class="mx-auto">
    <%= form_with model: [@article, @cloze_note],
                  url: article_cloze_note_path(@cloze_note.article.id, @cloze_note),
                  class: "contents" do |form| %>
      <div class="border-black text-center mx-auto px-4 mr-6 pb-2 pt-6 my-1">

        <%= render "errors" %>

        <%= form.label :sentence, class: "hidden" %>
        <%= form.text_area :sentence, class: "w-full h-24", required: true %>

        <%= form.submit class: "action" %>
      </div>
    <% end %>
  </div>

<% end %>
