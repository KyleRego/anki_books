<div class="mx-auto">
  <%= form_with model: [@article, @cloze_note], url:, class: "contents" do |form| %>
    <div class="border-black text-center mx-auto px-4 mr-6 pb-2 pt-6 my-1">

      <%= render "errors" %>

      <%= form.label :text, class: "hidden" %>
      <%= form.text_area :text, class: "w-full h-24", required: true %>

      <%= form.submit class: "action" %>
    </div>
  <% end %>
</div>
