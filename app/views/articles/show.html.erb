<div class="flex flex-col sm:flex-row my-4">

  <div id="article-<%= @article.id %>" class="<% if logged_in? || @basic_notes.any? %>sm:w-8/12<% end %>">
    <%= @article.content %>

    <div class="mt-2"><%= link_to("Edit", @article.custom_edit_path, class: "font-semibold") if logged_in? %></div>
  </div>

  <% if logged_in? || @basic_notes.any? %>
    <div id="notes-area" class="mt-4 sm:w-4/12 sm:ml-4 sm:mt-4">
      <%= render "articles/notes_area" %>
    </div>
  <% end %>

</div>
