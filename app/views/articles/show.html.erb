<% content_for :page_specific_links do %>
  <% if logged_in? %>
    <%= link_to("Edit article", edit_article_path(@article), class: "font-semibold mr-4") %>
    <%= link_to "Manage article", manage_article_path(@article), class: "text-blue-500 hover:text-blue-600 font-semibold mr-4" %>
  <% end %>
  <% if @article.basic_notes.any? %>
    <%= link_to("Study cards", study_article_cards_path(@article), class: "text-blue-500 hover:text-blue-600 font-semibold mr-4") %>
  <% end %>
<% end %>

<div class="flex flex-col sm:flex-row mt-4">

  <% if logged_in? || @basic_notes.any? %>
    <div id="article-<%= @article.id %>" class="sm:w-8/12">
  <% else %>
    <div id="article-<%= @article.id %>">
  <% end %>
    <%= @article.content %>
  </div>

  <% if logged_in? || @basic_notes.any? %>
    <div id="notes-area" class="mt-4 sm:w-4/12 sm:ml-4 sm:mt-4">
      <%= render "articles/notes_area" %>
    </div>
  <% end %>

</div>
