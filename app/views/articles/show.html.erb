<% content_for :page_specific_links do %>
  <% if logged_in? %>
    <%= link_to "Manage article", manage_article_path(@article), class: "font-semibold mr-4" %>
  <% end %>
  <% if @article.basic_notes.any? %>
    <%= link_to("Study cards", study_article_cards_path_helper(article: @article), class: "font-semibold mr-4") %>
  <% end %>
<% end %>

<%= render "articles/article_content" %>
