<section class="article-section flex flex-row-sm-col w-full break-anywhere">
  <div data-controller="set-top-under-nav" class="article-content-area min-w-2-3 flex-grow-2">
    <% if logged_in? %>
      <div class="sticky z-50 bg-white" data-set-top-under-nav-target="element">
        <%= link_to("#{@article.title}", article_path(@article), class: "mr-4") %>
        <%= link_to("Edit article", edit_article_path(@article), class: "action mr-4") %>
        <%= link_to("Manage article", manage_article_path(@article), class: "action") %>
      </div>
    <% else %>
      <div class="sticky z-50 bg-white" data-set-top-under-nav-target="element">
        <%= link_to("#{@article.title}", article_path(@article), class: "mr-4") %>
      </div>
    <% end %>

    <%= @article.content_without_cloze_markers %>
  </div>

<% if logged_in? || @basic_notes.any? %>
  <div data-controller="set-top-under-nav set-height-to-article-content-area-height" class="basic-notes-area min-w-1-3 flex-grow-1 ml-1">
    <%# The id attribute here is used to POST the right article_id param to articles#change_note_ordinal_position %>
    <%# The divs with class reorderable-basic-note-unit must be direct children of this container %>
    <div id="article-notes-<%= @article.id %>"
        class="max-h-screen position-sticky-sm-static overflow-y-auto-sm-scroll
                reorderable-basic-note-units-container flex flex-col justify-start"
                data-set-top-under-nav-target="element"
                data-set-height-to-article-content-area-height-target="element">

      <% if logged_in? && !@use_book_version %>
        <%= render "articles/basic_note/first_new_basic_note_link" %>
      <% end %>

      <% @basic_notes&.each do |basic_note| %>
        <% @basic_note = basic_note %>
        <% if @use_book_version %>
          <%= render partial: "books/basic_note/show" %>
        <% else %>
          <%= render partial: "articles/basic_note/show" %>
        <% end %>
      <% end %>
    </div>
  </div>
  <% end %>
</section>
