<% if logged_in? %>
  <div class="sticky top-8 z-50 bg-white flex-row justify-end">
    <%= link_to("Edit article", edit_article_path(@article), class: "action-link") %>
  </div>
<% end %>

<div class="flex flex-col sm:flex-row">
  <div class="sm:w-8/12">
    <%= @article.content %>
  </div>

  <% if logged_in? || @basic_notes.any? %>
    <%= render "articles/notes_area" %>
  <% end %>
</div>
