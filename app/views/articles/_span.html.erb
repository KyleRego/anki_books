<span class="d-flex align-items-center column-gap-2">
  <span>
    <%= article.title %>
  </span>
  <% if logged_in? && current_user.can_access_article?(article: article) %>
    <% if article.reading %>
      <span class="border px-2 fs-6" title="Reading">
        R
      </span>
    <% end %>
    <% if article.writing %>
      <span class="border px-2 fs-6" title="Writing">
        W
      </span>
    <% end %>
    <% if article.complete %>
      <span class="border px-1" title="Complete">
        <%= render  partial: "layouts/heroicons/check",
                    locals: { css_class: "vertical-align-text-bottom inline w-5 h-5" } %>
      </span>
    <% end %>
  <% end %>
</span>
