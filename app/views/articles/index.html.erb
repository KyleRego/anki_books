<% content_for :page_specific_links do %>
  <%= link_to "Manage book", manage_book_path(@book), class: "font-semibold mr-4" %>
  <%= link_to "Study cards", study_book_cards_path(@book), class: "font-semibold mr-4" %>
<% end %>

<h2><%= link_to @book.title, book_path(@book), class: "text-black" %></h2>

<div class="my-4">
  <% @articles.each do |article| %>
    <%= link_to article.title, article_path(article), class: "" %>
    <br>
  <% end %>
</div>

<div class="mt-4">
  <%= link_to "New article", new_book_article_path(@book), class: "action-link" %>
</div>
