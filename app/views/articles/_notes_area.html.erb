<div id="article-notes" class="sm:sticky-notes">

  <% if logged_in? %>
    <div>
      <%= link_to("Edit article", edit_article_path(@article), class: "font-semibold mr-4") %>
    </div>
  <% end %>

  <div class="sm:scrollable-notes">
    <% if logged_in? %>
      <%= render "basic_notes/first_new_basic_note_link" %>
    <% end %>

    <% @basic_notes&.each do |basic_note| %>
      <% @basic_note = basic_note %>
      <%= render template: "basic_notes/show" %>
    <% end %>
  </div>
</div>
