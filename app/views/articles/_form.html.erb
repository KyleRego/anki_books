<% content_for :page_specific_custom_js do %>
  <script>
    // Changes the Trix.config to support the subheadings.
    document.addEventListener("trix-before-initialize", () => {
      Trix.config.blockAttributes.heading2 = {
        tagName: "h2",
        terminal: true,
        breakOnReturn: true,
        group: false,
      };

      Trix.config.blockAttributes.heading3 = {
        tagName: "h3",
        terminal: true,
        breakOnReturn: true,
        group: false,
      };

      Trix.config.blockAttributes.heading4 = {
        tagName: "h4",
        terminal: true,
        breakOnReturn: true,
        group: false,
      };

      Trix.config.blockAttributes.heading5 = {
        tagName: "h5",
        terminal: true,
        breakOnReturn: true,
        group: false,
      };

      Trix.config.blockAttributes.heading6 = {
        tagName: "h6",
        terminal: true,
        breakOnReturn: true,
        group: false,
      };
    })
  </script>
<% end %>

<%= form_with model: @article do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field" data-controller="article-editor" data-article-editor-target="editorContainer">
    <%= form.label :content %>
    <%= form.rich_text_area :content %>
  </div>

  <%= form.submit %>
<% end %>
