<% content_for :head do %>
  <%= render "trix_config" %>
<% end %>

<%= form_with model: @article do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field" data-controller="article-editor" data-article-editor-target="editorContainer">
    <%= form.label :content %>
    <%= form.rich_text_area :content %>
  </div>

  <%= form.submit %>
<% end %>
