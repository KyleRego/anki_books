<% content_for :page_specific_links do %>
  <li><%= link_to "Manage concept", manage_concept_path(@concept), class: "font-semibold mr-4" %></li>
<% end %>

<h2><%= @concept.name %></h2>

<div class="mt-4 pb-4 border-black-b">
  <h4 class="pb-2">Cloze notes:</h4>
  <% @cloze_notes.each do |cloze_note| %>
    <p><%= link_to cloze_note.text, article_path(cloze_note.article) %></p>
  <% end %>
</div>
