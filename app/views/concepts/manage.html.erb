<% content_for :page_specific_links do %>
  <%= link_to @concept.name, concept_path(@concept), class: "font-semibold mr-4" %>
<% end %>

<h2>Manage concept: <%= @concept.name %></h2>

<div class="mt-4 pb-4 border-b-2">
  <%= link_to "Edit concept", edit_concept_path(@concept), class: "action-link" %>
</div>

<div class="mt-4">
  <%= button_to "Delete #{@concept.name}",
    concept_path(@concept),
    class: "text-red-500 hover:text-red-600 action-link",
    method: :delete,
    form: { data: { turbo_confirm: "Are you sure you want to delete #{@concept.name}?"} } %>
</div>
