<%= form_with model: [@article, @note],
              url: @editing ? 
                article_cloze_note_path(@article, @note) :
                article_cloze_notes_path(@article.id),
              method: @editing ? :patch : :post,
              scope: :cloze_note,
              id: "note-form" do |form| %>
  <div class="">
    <%= render "cloze_notes/errors" %>

    <div class="mt-2">
      <%= form.label :sentence, class: "form-label" %>
      <%= form.text_area :sentence, class: "form-control", required: true %>
    </div>
  </div>
<% end %>
