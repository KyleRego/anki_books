<h1 class="text-4xl font-bold">
  <%= @book_group.title %>
</h1>

<div class="mt-4">
  <div>
    <% @books.each do |book| %>
      <%= link_to book.title, book_path(book), class: "text-blue-500 hover:text-blue-600" %>
    <% end %>
  </div>
</div>

<div class="mt-4 pb-4">
  <%= link_to "Edit book group", edit_book_group_path(@book_group), class: "cursor-pointer font-semibold" %>
</div>
