<h1 class="text-3xl font-bold mb-4">
  Hi, <%= current_user.username %>
</h1>

<div class="my-4">
  <div class="flex flex-col sm:flex-row justify-between">
    <div>
      <% @articles.each do |article| %>
        <% next if article.system %>
        <%= link_to article.title, article_path_or_root_path_if_system(article), class: "text-blue-500 hover:text-blue-600" %>
        <br>
      <% end %>
    </div>
    <div>
      <% @articles.each do |article| %>
        <% next if article.system %>
        <%= button_to "Delete #{article.title}",
            article_path_or_root_path_if_system(article),
            method: :delete,
            form: { data: { turbo_confirm: "Are you sure you want to delete #{article.title}"} }
        %>
      <% end %>
    </div>
  </div>
</div>

<%= button_to "Create new article", new_article_path(id: current_user.id) %>
