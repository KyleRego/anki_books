<nav class="py-2">
  <div class="flex justify-end">

    <% if !current_page?(root_path) %>
      <%= link_to "Home", root_path, class: "text-blue-500 hover:text-blue-600 font-semibold" %>
    <% end %>

    <% if @article&.notes_count&.positive? && !on_study_cards? %>
      <%= link_to("Study cards", article_study_cards_path(@article, title: @article.title), class: "text-blue-500 hover:text-blue-600 font-semibold ml-4") %>
    <% end %>

    <% if logged_in? %>
      <% if (@book&.persisted? && !current_page?(book_path(@book, @book.title_slug))) %>
        <%= link_to("#{@book.title}",
                  book_path(@book, @book.title_slug),
                  class: "text-blue-500 hover:text-blue-600 font-semibold ml-4")  %>
      <% elsif !current_page?(user_books_path(current_user)) %>
        <%= link_to("My books",
                    user_books_path(current_user),
                    class: "text-blue-500 hover:text-blue-600 font-semibold ml-4") %>
      <% end %>

      <%= link_to "Logout", logout_path, data: { "turbo-method": :delete }, class: "text-blue-500 hover:text-blue-600 font-semibold ml-4" %>
    <% elsif !current_page?(login_path) %>
      <%= link_to "Login", login_path, class: "text-blue-500 hover:text-blue-600 font-semibold ml-4" %>
    <% end %>
  
  </div>
</nav>
