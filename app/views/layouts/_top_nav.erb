<nav class="py-2">
  <div class="flex justify-end">

    <% if !current_page?(root_path) %>
      <%= link_to "Home", root_path, class: "text-blue-500 hover:text-blue-600 font-semibold" %>
    <% end %>

    <% if show_link_to_study_cards_in_top_nav?(@article) %>
      <%= link_to("Study cards", study_article_cards_path(@article), class: "text-blue-500 hover:text-blue-600 font-semibold ml-4") %>
    <% end %>

    <% if logged_in? %>
      <% if show_link_to_book_in_top_nav? %>
        <%= link_to("#{@book.title}", book_path(@book),
                  class: "text-blue-500 hover:text-blue-600 font-semibold ml-4")  %>
      <% end %>

      <% if show_link_to_my_books_in_top_nav? %>
        <%= link_to("My books", books_path,
                    class: "text-blue-500 hover:text-blue-600 font-semibold ml-4") %>
      <% end %>

      <%= link_to "Logout", logout_path, data: { "turbo-method": :delete }, class: "text-blue-500 hover:text-blue-600 font-semibold ml-4" %>
    <% elsif !current_page?(login_path) %>
      <%= link_to "Login", login_path, class: "text-blue-500 hover:text-blue-600 font-semibold ml-4" %>
    <% end %>
  
  </div>
</nav>
