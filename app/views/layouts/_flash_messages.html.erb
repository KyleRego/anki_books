<% if notice.present? %>
  <p class="flex justify-between align-middle
            border
            flash-notice-colors
            font-semibold rounded-md text-center
            py-3 px-4 my-4 mx-auto max-w-sm"
     data-controller="flash-messages"
     data-flash-messages-target="message">
    <span class="flex flex-col justify-center">
      <%= render "layouts/heroicons/check" %>
    </span>
    <span>
      <%= notice %>
    </span>
    <button class="flex flex-col justify-center cursor-pointer"
          data-flash-messages-target="closeIcon"
          title="Dismiss">
      <%= render "layouts/heroicons/x_mark" %>
    </button>
  </p>
<% end %>

<% if alert.present? %>
  <p class="flex justify-between align-middle
            border font-semibold
            flash-alert-colors
            py-3 px-4 rounded-md text-center my-4 mx-auto max-w-sm"
     data-controller="flash-messages"
     data-flash-messages-target="message">
    <span class="flex flex-col justify-center">
      <%= render "layouts/heroicons/exclamation_triangle" %>
    </span>
    <span>
      <%= alert %>
    </span>
    <button class="flex flex-col justify-center cursor-pointer"
          data-flash-messages-target="closeIcon"
          title="Dismiss">
      <%= render "layouts/heroicons/x_mark" %>
    </button>
  </p>
<% end %>
