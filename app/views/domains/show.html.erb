<h1 class="text-4xl font-bold">
  <%= @domain.title %>
</h1>

<div class="mt-4">
  <% @books.each do |book| %>
    <div>
      <%= link_to book.title, book_path(book), class: "text-blue-500 hover:text-blue-600" %>
    </div>
  <% end %>
</div>

<div class="mt-4 pb-4">
  <%= link_to "Edit domain", edit_domain_path(@domain), class: "cursor-pointer font-semibold" %>
</div>
